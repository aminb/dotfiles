" scroll more
" noremap j 3j
" noremap k 3k

" smooth scroll settings
let g:smooziee_scroll_amount="100"
let g:smooziee_scroll_interval="10"


" swap ; and :
 nnoremap ; :
 nnoremap : ;
 vnoremap ; :
 vnoremap : ;

" J/K for prev/next tab
noremap J gT
noremap K gt

" x for close, X for undo
noremap x d
noremap X u

" d and u (down and up)
" noremap d <C-d>
" noremap u <C-u>
